var lib = fl.getDocumentDOM().library;var select = lib.getSelectedItems();var total = select.length;if( total <= 0 ) {	alert( "Make a library selection" );} else {		var itemName = "";	var splitName = [];	var itemIndex;	for( var i = 0; i < total; i++ ) {		itemName = select[i].name;				splitName = itemName.split("/");		itemName =  splitName[splitName.length-1];				// Remove file type and periods		splitName = itemName.split(".");		splitName.pop();		itemName = splitName.join("");				// Remove spaces		itemName = findReplace( itemName, " ", "-" );				select[i].linkageExportForAS = true;		select[i].linkageIdentifier = itemName;		select[i].linkageBaseClass = "flash.display.BitmapData";		select[i].linkageExportInFirstFrame = true;	}	}function findReplace( original, toFind, toReplace ) {	return original.split( toFind ).join( toReplace );}